<h1>Personal ToDo list</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Objective<span class="glyphicon glyphicon-align-left"></span></th>
      <th>Completed<span class="glyphicon glyphicon-ok"></span></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.objective %></td>
        <td><%= todo_list.completed %></td>
        <td><%= link_to 'Show', todo_list %></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
        <td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

